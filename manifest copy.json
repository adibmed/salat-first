{
  "default_locale": "ar",
  "icons": {
    "16": "icons/16.png",
    "19": "icons/19.png",
    "38": "icons/38.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "action": {
    "default_popup": "src/popup/index.html",
    "default_title": "Salat First",
    "default_icon": {
      "16": "icons/16.png",
      "19": "icons/19.png",
      "38": "icons/38.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    }
  },
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "all_frames": true,
      "js": [
        "src/content-script/index.ts"
      ],
      "matches": [
        "*://*/*"
      ],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "manifest_version": 3,
  "name": "chrome-extension",
  "options_page": "src/options/index.html",
  "permissions": [
    "storage"
  ],
  "version": "1.0.0",
  "web_accessible_resources": [
    {
      "matches": [
        "*://*/*"
      ],
      "resources": [
        "src/content-script/index.ts"
      ]
    }
  ],
  "content_security_policy": {
    "extension_page": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  }
}